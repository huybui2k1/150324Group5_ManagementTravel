@model Group5_Management_Library.Models.Customer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<header class="panel-heading">
    Cập nhật Khách Hàng
</header>
<div class="panel-body">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
            {
                @Html.HiddenFor(model=>model.CustomerId)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.EditorFor(model=>model.CustomerIdName,new {htmlAttributes= new{@class="form-control"} })
                    @Html.ValidationMessageFor(model => model.CustomerIdName, "", new { @class ="text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label"></label>
                    @Html.EditorFor(model=>model.Address,new {htmlAttributes= new{@class="form-control"} })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class =
                "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="DienThoai" class="control-label"></label>
                    @Html.EditorFor(model=>model.PhoneNumber,new {htmlAttributes= new{@class="form-control",@placehoder="Mời nhập số điện thoại"} })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Quay trở lại","Index","Customer",null, new {@class="btn btn-danger"})
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}